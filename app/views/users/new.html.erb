<div class="container-md" style="max-width: 1140px;">
    <div class="row justify-content-center">
        <div class="col-md-8 mt-5">
            <%= image_tag "yt_mini_sh.jpg", class: "my-5 img-fluid" %>
        </div>
    </div>
    <div class="row justify-content-center my-5">
        <div class="col-lg-8">
            <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">Inscris-toi à Shift Heroes</h1>
            <p style="color: green"><%= notice %></p>
            <p style="color: red"><%= alert %></p>
            <%= form_with(model: User.new, url: users_path, method: :post, html: {class: "needs-validation", novalidate: ""}) do |f| %>
                <div class="mb-3">
                    <%= f.label :first_name, "Prénom", class: "form-label" %>
                    <%= f.text_field :first_name, class: "form-control", required: true %>
                    <div class="invalid-feedback">Veuillez fournir un prénom.</div>
                </div>
                <div class="mb-3">
                    <%= f.label :email, class: "form-label" %>
                    <%= f.email_field :email, class: "form-control", required: true %>
                    <div class="invalid-feedback">Veuillez fournir une adresse e-mail valide.</div>
                </div>
                <div class="mb-3">
                    <%= f.label :password, class: "form-label" %>
                    <%= f.password_field :password, class: "form-control", required: true %>
                    <div class="invalid-feedback">Veuillez fournir un mot de passe.</div>
                </div>
                <div class="mb-3">
                    <%= f.label :password_confirmation, class: "form-label" %>
                    <%= f.password_field :password_confirmation, class: "form-control", required: true %>
                    <div class="invalid-feedback">Veuillez fournir un mot de passe.</div>
                </div>
                <div class="actions">
                    <%= f.submit "S'inscrire", class: "btn btn-primary btn-lg px-4 me-md-2 bg-rainbow", style: "color: #0c5175; border: none;" %>
                </div>
            <% end %>
        </div>
    </div>
    <div class="row justify-content-center my-5">
        <div class="col-auto">
            <%= link_to "... ou se connecter", login_path, class: "btn btn-outline-secondary btn-lg px-4" %>
        </div>
    </div>
</div>
