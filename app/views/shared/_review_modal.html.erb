<div class="modal fade" id="reviewModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="reviewModalLabel">Votre avis sur Shift Heroes compte !</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="error_messages_container">
          <div id="error_messages"></div>
        </div>
        <%= form_with model: Review.new, url: create_review_path, local: false do |f| %>
          <div class="mb-3">
            <div class="star-rating">
              <%= f.label :stars, 'Quelle note donneriez-vous Ã  Shift Heroes ?' %>
              <div class="stars-container">
                <% (5.downto(1)).each do |i| %>
                  <%= f.radio_button :stars, i, class: 'star-radio', id: "star#{i}" %>
                  <label for="star<%= i %>" class="star">
                    <i class="fas fa-star"></i>
                  </label>
                <% end %>
              </div>
            </div>
          </div>
          <div class="mb-3">
            <%= f.label :comment, 'Commentaire' %>
            <%= f.text_area :comment, class: 'form-control' %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            <%= f.submit 'Envoyer', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<script>
// On each Turbo page load, check if the user can submit a review.
// If the user hasn't submitted a review and it's been over an hour since the last prompt,
// display a modal to encourage user review after a 3-second delay.
let modalTimeout;

document.addEventListener('turbo:load', function() {
  clearTimeout(modalTimeout); // Clear any existing timeout modal

  if (!<%= current_user.has_review? %> && <%= current_user.can_review? %>) {
    var lastShown = localStorage.getItem('reviewModalShown');
    var currentTime = new Date().getTime();
    var oneHour = 3600000; // milliseconds

    if (!lastShown || currentTime - lastShown > oneHour) {
      console.log("Attempting to show modal");
      var reviewModal = new bootstrap.Modal(document.getElementById('reviewModal'));
      modalTimeout = setTimeout(() => {
        reviewModal.show();
        localStorage.setItem('reviewModalShown', currentTime);
      }, 5000); // display modal after 5 seconds
    }
  }
});
</script>
