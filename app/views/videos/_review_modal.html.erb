<div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="reviewModalLabel">Votre avis sur Shift Heroes</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with model: @review, url: create_review_path, local: false do |f| %>
          <div class="mb-3">
            <%= f.label :stars, 'Ã‰toiles' %>
            <%= f.number_field :stars, class: 'form-control', min: 1, max: 5 %>
          </div>
          <div class="mb-3">
            <%= f.label :comment, 'Commentaire' %>
            <%= f.text_area :comment, class: 'form-control' %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            <%= f.submit 'Envoyer', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  var reviewModal = new bootstrap.Modal(document.getElementById('reviewModal'));
  setTimeout(() => {
    reviewModal.show();
  }, 2000); // display modal after 2 seconds
});
</script>
