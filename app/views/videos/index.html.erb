<%= render "shared/navbar" %>
<%= render "shared/flash" %>
<audio src="/celebrate.mp3" type="audio/mpeg" id="celebrateSound"></audio>

<div class="container-md">
    <div class="row justify-content-center text-center my-5">
        <% if session[:trigger_confetti] %>
            <script>
                confetti({
                    particleCount: 400,
                    spread: 150,
                    origin: { y: 0.6 }
                });

                var sound = document.getElementById("celebrateSound");
                sound.play();
            </script>
            <% session.delete(:trigger_confetti) %>
        <% end %>
        <div class="col-lg-8">
            <h1 class="display-6 fw-bold text-body-emphasis lh-1 mb-3">Ma progression</h1>
        </div>
    </div>
</div>

<div class="container row">

    <div class="col-lg-8 col-12" id="video-and-details">
        <%= render "videos/video_and_details" %>
    </div>

    <div class="col-lg-4 col-12" id="video-playlist">
        <%= render "videos/playlist" %>
    </div>

</div>