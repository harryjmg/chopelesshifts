<div class="container-md" style="max-width: 1140px;">
    <div class="row justify-content-center">
        <div class="col-md-5 mt-5">
            <%= link_to root_path do %>
                <%= image_tag "yt_mini_sh.jpg", class: "my-5 img-fluid" %>
            <% end %>
        </div>
    </div>
    <div class="row justify-content-center my-5">
        <div class="col-lg-8">
            <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">Se connecter à Shift Heroes</h1>
            <p style="color: green"><%= notice %></p>
            <p style="color: red"><%= alert %></p>
            <%= form_with(url: login_path, method: :post, html: {class: "needs-validation", novalidate: ""}) do |f| %>
                <div class="mb-3">
                    <%= f.label :email, class: "form-label" %>
                    <%= f.text_field :email, class: "form-control form-control-lg", required: true %>
                    <div class="invalid-feedback">Please provide an email.</div>
                </div>
                <div class="mb-3">
                    <%= f.label :password, class: "form-label" %>
                    <%= f.password_field :password, class: "form-control form-control-lg", required: true %>
                    <div class="invalid-feedback">Please provide a password.</div>
                </div>
                <div class="mb-3">
                    <%= link_to "Mot de passe oublié ?", forgot_password_path, class: "link-secondary text-decoration-none" %>
                </div>
                <div class="form-check mb-3">
                    <%= f.check_box :remember_me, class: "form-check-input" %>
                    <%= f.label :remember_me, class: "form-label" do %>
                        Se souvenir de moi
                    <% end %>
                </div>
                <div class="actions">
                    <%= f.submit "Se connecter", class: "btn btn-primary btn-lg px-4 me-md-2 bg-rainbow", style: "color: #0c5175; " %>
                </div>
            <% end %>
        </div>
    </div>
    <div class="row justify-content-center my-5">
        <div class="col-auto">
            <%= button_to "... ou s'inscrire", new_user_path, method: :get, class: "btn btn-outline-secondary btn-lg px-4" %>
        </div>
    </div>
</div>
